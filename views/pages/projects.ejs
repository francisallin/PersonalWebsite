<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header', {variant: 'compact'}); %>
</header>

<main>
<div class="row">
  <div class="col-sm-12">
    <div class="mt-4 p-5 bg-light text-dark rounded">
      <h1>Projects</h1>
      <p><%= projectsTitle %></p>
      <!--Credit: https://github.com/StartBootstrap/startbootstrap-personal-->
      <div class="d-flex flex-wrap justify-content-center">
        <% projects.forEach(function(project) { %>
          <div class="col-sm-4 card shadow rounded-4 border-0 m-3"> <!--with border-->
            <div class="card-body p-0 m-2 align-items-center">
              <div class="d-flex align-items-center" style="min-height: 150px;">
                <img class="img-fluid" src="<%= project.image%>" alt="Hackathon Screenshot" >
              </div>
              <div class="p-5">
                  <h2 class="fw-bolder"><%= project.name %></h2>
                  <p><%= project.description %></p>
                  <a href="<%= project.link %>">Link</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>